<!DOCTYPE html>
<html lang="en">
  <%- include('./components/head') %>
  <body>
    <div class="container-scroller">
      <!-- partial:partials/_sidebar.html -->
      <%- include('./components/sidebar') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_navbar.html -->
        <%- include('./components/topnav') %>
        <!-- partial -->
        <div class="main-panel">
          <div style="background-color: #ffff" class="content-wrapper">
           <h2 style="color: black;">Resources Store</h2>
           <p class="text-gray">Buy extra resources to upgrade your server.</p>
            <% if (req.query.err) { %>
              <% if (req.query.err !== "none") { %>
                <div style="border-radius: 15px;" class="alert">
                  <% if (req.query.err == "CANNOTAFFORD") { %>
                    Insufficient funds.
                  <% } else if (req.query.err == "MAXCPUEXCEETED") { %>
                    You have reached the cpu limit!
                  <% } else if (req.query.err == "MAXRAMEXCEETED") { %>
                    You have reached the RAM limit!
                  <% } else if (req.query.err == "MAXDISKEXCEETED") { %>
                    You have reached the disk limit!
                  <% } else if (req.query.err == "MAXSERVERSEXCEETED") { %>
                    You have reached the servers limit!
                  <% } %>
                </div>
              <% } else if (req.query.err == "none") { %>
                <div class="alert" style="background-color: aqua; border-radius: 15px;">
                  <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                  Success!
                </div>
              <% } %>
            <% } %>
            <div class="row">
              <div class="col-md-6 grid-margin stretch-card">
                <div style="border: thin solid white;" class="card">
                  <div style="background-color: white; border: thin solid aqua;" class="card-body">
                    <form class="forms-sample" action="/buycpu">
                      <div class="form-group">
                        <label style="font-weight: bold; color: black;" class="mdi mdi-cpu-64-bit">CPU</label><BR>
                        <select name="amount" class="form-control" style="border-radius: 15px; padding: 8px;">
                          <option value=1><%= settings.api.client.coins.store.cpu.per / 100%> Core - <%= settings.api.client.coins.store.cpu.cost %> coins</option>
                          <option value=2><%= settings.api.client.coins.store.cpu.per * 2 / 100%> Cores - <%= settings.api.client.coins.store.cpu.cost * 2 %> coins</option>
                        </select>
                      </div>
                      <button style="background-color: aqua;" class="btn btn-primary btn-lg" type="submit">Purchase</button>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div style="border: white thin solid;" class="card">
                  <div style="background-color: white; border: thin solid aqua;" class="card-body">
                    <form class="forms-sample" action="/buyram">
                      <div class="form-group">
                        <label style="font-weight: bold; color: black;" class="mdi mdi-memory">RAM</label><BR>
                        <select name="amount" class="form-control" style="border-radius: 15px; padding: 8px;">
                          <option value=1><%= settings.api.client.coins.store.ram.per  / 1024%>GB RAM - <%= settings.api.client.coins.store.ram.cost %> coins</option>
                          <option value=2><%= settings.api.client.coins.store.ram.per * 2 / 1024%>GB RAM - <%= settings.api.client.coins.store.ram.cost * 2 %> coins</option>
                          <option value=3><%= settings.api.client.coins.store.ram.per * 3 / 1024%>GB RAM - <%= settings.api.client.coins.store.ram.cost * 3 %> coins</option>
                          <option value=4><%= settings.api.client.coins.store.ram.per * 4 / 1024%>GB RAM - <%= settings.api.client.coins.store.ram.cost * 4 %> coins</option>
                        </select>
                      </div>
                      <button style="background-color: aqua;" class="btn btn-primary btn-lg" type="submit">Purchase</button>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div style="border: white thin solid;" class="card">
                  <div style="background-color: white; border: thin solid aqua;" class="card-body">
                    <form class="forms-sample" action="/buydisk">
                      <div class="form-group">
                        <label style="font-weight: bold; color: black;" class="mdi mdi-harddisk">Disk</label><BR>
                        <select name="amount" class="form-control" style="border-radius: 15px; padding: 8px;">
                          <option value=1><%= settings.api.client.coins.store.disk.per / 1024%>GB Disk - <%= settings.api.client.coins.store.disk.cost %> coins</option>
                          <option value=2><%= settings.api.client.coins.store.disk.per * 2 / 1024%>GB Disk - <%= settings.api.client.coins.store.disk.cost * 2 %> coins</option>
                          <option value=3><%= settings.api.client.coins.store.disk.per * 3 / 1024%>GB Disk - <%= settings.api.client.coins.store.disk.cost * 3 %> coins</option>
                          <option value=4><%= settings.api.client.coins.store.disk.per * 4 / 1024%>GB Disk - <%= settings.api.client.coins.store.disk.cost * 4 %> coins</option>
                          <option value=5><%= settings.api.client.coins.store.disk.per * 5 / 1024%>GB Disk - <%= settings.api.client.coins.store.disk.cost * 5 %> coins</option>
                        </select>
                      </div>
                      <button style="background-color: aqua;" class="btn btn-primary btn-lg" type="submit">Purchase</button>
                    </form>
                  </div>
                </div>
              </div>
              <div class="col-md-6 grid-margin stretch-card">
                <div style="border: thin solid white;" class="card">
                  <div style="background-color: white; border: thin solid aqua;" class="card-body">
                    <form class="forms-sample" action="/buyservers">
                      <div class="form-group">
                        <label style="font-weight: bold; color: black;" class="mdi mdi-layers">Servers</label><BR>
                        <select name="amount" class="form-control" style="border-radius: 15px; padding: 8px;">
                          <option value=1><%= settings.api.client.coins.store.servers.per %> Server - <%= settings.api.client.coins.store.servers.cost %> coins</option>
                          <option value=2><%= settings.api.client.coins.store.servers.per * 2 %> Servers - <%= settings.api.client.coins.store.servers.cost * 2 %> coins</option>
                          <option value=3><%= settings.api.client.coins.store.servers.per * 3 %> Servers - <%= settings.api.client.coins.store.servers.cost * 3 %> coins</option>
                          <option value=4><%= settings.api.client.coins.store.servers.per * 4 %> Servers - <%= settings.api.client.coins.store.servers.cost * 4 %> coins</option>
                        </select>
                      </div>
                      <button style="background-color: aqua;" class="btn btn-primary btn-lg" type="submit">Purchase</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <%- include('./components/footer') %>
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- Plugin js for this page -->
    <script src="/assets/vendors/select2/select2.min.js"></script>
    <script src="/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>
    <script>
      async function submitChanges() {
        let ram = encodeURIComponent(document.getElementById("InputRAM").value);
        let disk = encodeURIComponent(document.getElementById("InputDisk").value);
        let cpu = encodeURIComponent(document.getElementById("InputCPU").value);
        document.location.href = `/modify?id=<%= req.query.id %>&ram=${ram}&disk=${disk}&cpu=${cpu}`;
      };
    </script>
    <!-- End plugin js for this page -->
    <%- include('./components/scripts') %>
    <!-- Custom js for this page -->
    <script src="/assets/js/file-upload.js"></script>
    <script src="/assets/js/typeahead.js"></script>
    <script src="/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
  </body>
</html>